# Maintainer: Aditya Shakya <@adi1090x>

pkgname=archcraft-scripts
pkgver=1.0
pkgrel=1
pkgdesc="Scripts for Archcraft"
arch=('any')
license=('GPL3')
makedepends=('git')
depends=()
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

url="https://github.com/archcraft-os"
source=(${pkgname}::"git+${url}/${pkgname}")
sha256sums=('SKIP')

package() {
	local bin=${pkgdir}/usr/bin
	local localbin=${pkgdir}/usr/local/bin

	lbin=(`ls -p --hide={abif_chrooted_post_install.sh,abif_post_install.sh,chrooted_post_install.sh,post_install.sh,device-info,LICENSE,README.md} ${srcdir}/${pkgname}`)

	for script in "${lbin[@]}"; do
		install -Dm755 ${srcdir}/${pkgname}/"$script"						"$localbin"/"$script"
	done

	install -Dm755 ${srcdir}/${pkgname}/abif_chrooted_post_install.sh		"$bin"/abif_chrooted_post_install.sh
	install -Dm755 ${srcdir}/${pkgname}/abif_post_install.sh				"$bin"/abif_post_install.sh
	install -Dm755 ${srcdir}/${pkgname}/chrooted_post_install.sh			"$bin"/chrooted_post_install.sh
	install -Dm755 ${srcdir}/${pkgname}/post_install.sh						"$bin"/post_install.sh
	install -Dm755 ${srcdir}/${pkgname}/device-info							"$bin"/device-info	
}
